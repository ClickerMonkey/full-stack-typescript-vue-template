{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "allowJs": false,
    "declaration": true,
    "declarationDir": "types",
    "outDir": "dist"
  },
  "include": [
    "src/**/*"
  ]
}